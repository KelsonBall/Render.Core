<UserControl x:Class="KelsonBall.LudumDare41.LevelEditor.ToolbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KelsonBall.LudumDare41.LevelEditor"
             mc:Ignorable="d" d:DesignWidth="800" Background="White">
    <StackPanel Orientation="Horizontal">
        <Button Margin="2" Command="{Binding  AddToolSelectedCommand}">Add</Button>
        <Button Margin="2" Command="{Binding MoveToolSelectedCommand}">Move</Button>
        <Button Margin="2" Command="{Binding DrawToolSelectedCommand}">Border</Button>
        <Button Margin="2" Command="{Binding PathToolSelectedCommand}">Path</Button>

    </StackPanel>
</UserControl>
